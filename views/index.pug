extends layout

block content
  h1= title
  p Welcome to F.R.I.E.N.D.S #{title}
  br
  - var btnType = 'danger'
  - var btnSize = 'lg'
  button(type='button' class='btn btn-'+btnType+' btn-'+btnSize onClick='moreClaps()') Press Me
  div(id="target") Clap for me   
  script.
    var clap_count = 0;
    function moreClaps(){
      clap_count+=2;
      console.log("test", clap_count )
      document.getElementById("target").innerHTML = "Clap " + clap_count + " times";
    }
    
